<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/ivIcon"
            android:src="@drawable/img_folder"
            android:layout_marginRight="16dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ivPlayTests"
            android:src="@drawable/img_navigate"
            android:layout_marginLeft="16dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse eget faucibus ligula. Curabitur nec arcu enim. Nulla tristique finibus tellus, non cursus enim varius a"
            android:id="@+id/tvFolderName"
            android:textColor="#000"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/ivIcon"
            android:layout_toLeftOf="@+id/ivPlayTests"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCC"/>
</LinearLayout>